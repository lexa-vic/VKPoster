<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:behavior_hideable="true"
              app:behavior_peekHeight="360dp"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="@string/post_stickers"
            android:textColor="@color/black"
            android:textSize="16sp" />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="360dp">

        <View
                android:id="@+id/fragment_sticker_list_dialog_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greyDivider"
                android:layout_gravity="top"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_sticker_list_dialog_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="12dp" />

    </FrameLayout>

</LinearLayout>